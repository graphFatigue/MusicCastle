@using bestill.Domain.ViewModels.Artist
@model ArtistViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src=@Model.Avatar 
                 class="img-fluid rounded-start rounded" alt="@Model?.Name">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
            </div>
        </div>
                           <div class="card-body">
                            <a asp-controller="Album" asp-action="GetAlbums" asp-route-authorId="@Model.Id" class="card-link">Перейти к альбомам</a>
                            @* <a asp-controller="Basket" asp-action="Add" asp-route-id="@id" class="card-link">Добавить</a> *@
                            @if (User.IsInRole("Admin"))
                            {
                                <hr/>
                                <a asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
                                <a asp-controller="Car" asp-action="Save" asp-route-id="@Model.Id" class="btn btn-primary">Изменить</a>
                            }
                        </div>
    </div>
</div>