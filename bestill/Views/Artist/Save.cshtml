@using System;
@using System.Collections;
@using System.Globalization;
@using bestill.Domain.Entity;
@model bestill.Domain.ViewModels.Artist.ArtistViewModel

@{
        ViewBag.Title = "Добавление";
        Layout = "_Layout";
}


@{
    var textTitle = Model?.Id == 0 ? "Изменение данных" : "Добавление данных";
}

@{
    Countries countries = new Countries();
    countries.SetList();
    var countryList = countries.cultureList;

}



<div style="padding: 10px;"></div>
 <div class="col-md-12">
    <div class="card-body">
        <div class="card card-outline-secondary" style="background-color: white">
            <div class="card-header">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="form-group">
                        <label asp-for="Name" style="color:black">Имя исполнителя</label>
                        <input asp-for="Name" class="form-control" type="text" id="validationServer01" placeholder="Введите имя исполнителя..." required>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" style="color:black">Описание</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Добавьте описание..."></textarea>
                    </div>
                    <div class="col-md-3">
                     <label for="validationDefault04" style="color:black" class="form-label">Страна</label>
                        <select asp-for="Country" style="align-content" class="form-select" id="validationDefault04" required>
                          <option selected disabled value="">Выберите...</option>
                            @foreach (var country in countryList)
                            {
                                <option>@country</option>
                            }
                            
                        </select>
                      </div>


                    <div class="form-group">
                        <label asp-for="Avatar" style="color:black">Изображение</label>
                      <textarea asp-for="Avatar" class="form-control" placeholder="Вставьте ссылку на изображение..."></textarea>
                    </div>
                                   
                    <li>
                        <input asp-for="Group" type="checkbox">
                        <label asp-for="Group" style="color:black" >Групповой исполнитель</label>
                    </li>
                    
                    <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
</div>



