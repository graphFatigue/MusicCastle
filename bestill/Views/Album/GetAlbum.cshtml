@using bestill.Domain.ViewModels.Album
@model AlbumViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src=@Model.Avatar 
                 class="img-fluid rounded-start rounded" alt="@Model?.Title">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Title</h5>
                <p class="card-text"><b>Год: </b>@Model?.YearRelease</p>
            </div>
        </div>
                           <div class="card-body">
                            <a asp-controller="Song" asp-action="GetSongs" asp-route-albumId="@Model.Id" class="card-link">Перейти к песням</a>
                            @* <a asp-controller="Basket" asp-action="Add" asp-route-id="@id" class="card-link">Добавить</a> *@
                                <hr/>
                                <a asp-controller="Album" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
                                <a asp-controller="Album" asp-action="Save" asp-route-id="@Model.Id" class="btn btn-primary">Изменить</a>
                        </div>
    </div>
</div>